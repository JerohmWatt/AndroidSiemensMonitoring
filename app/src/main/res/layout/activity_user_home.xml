<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/lightBlue">

    <ImageView
        android:id="@+id/ic_account_box_black_24dp"
        android:layout_width="74dp"
        android:layout_height="34dp"
        android:layout_row="0"
        android:layout_column="6"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_home_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:text="@string/home"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_userhome_loggedAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:text="@string/vous_tes_connect_en_tant_que"
        android:textSize="15sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/c_userhome_pills"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="3dp"
        android:layout_marginBottom="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:columnCount="1"
            android:rowCount="6">

            <TextView
                android:id="@+id/tv_userhome_namePills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/nom_conditionnement_de_pillules"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Tab" />

            <TextView
                android:id="@+id/tv_userhome_ipPills"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/ip_192_168_0_15"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_userhome_rackPills"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/rack_0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_userhome_slotPills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/slot_2"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bt_userhome_goToPills"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="onUserHomeClickManager"
                android:text="@string/acc_der_l_automate"
                android:textSize="10sp" />

            <Button
                android:id="@+id/bt_userhome_accessPillApi"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="onUserHomeClickManager"
                android:text="@string/acc_der_l_api"
                android:textSize="10sp" />


        </GridLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/c_userhome_liquid"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="3dp"
        android:layout_marginBottom="25dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:columnCount="1"
            android:rowCount="6">

            <TextView
                android:id="@+id/tv_userhome_nameLiquid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/nom_asservissement_de_liquide"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Tab" />

            <TextView
                android:id="@+id/tv_userhome_ipLiquid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/ip_192_168_0_15"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_userhome_rackLiquid"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/rack_0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_userhome_slotLiquid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/slot_2"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bt_userhome_goToLiquid"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="onUserHomeClickManager"
                android:text="@string/acc_der_l_automate"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/bt_userhome_accessLiquidApi"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="onUserHomeClickManager"
                android:text="@string/acc_der_l_api"
                android:textSize="10sp" />

        </GridLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bt_userhome_editParams"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onUserHomeClickManager"
        android:text="@string/modifier_les_param_tres_de_connexion" />




</LinearLayout>
