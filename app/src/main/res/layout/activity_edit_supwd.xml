<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/adminRed">

    <ImageView
        android:id="@+id/ic_account_box_black_24dp"
        android:layout_width="97dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_vpn_key_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        android:text="Création du compte Administrateur"
        android:textAlignment="center"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/et_createadmin_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom" />

    <EditText
        android:id="@+id/et_createadmin_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Prénom" />

    <EditText
        android:id="@+id/et_createadmin_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/et_createadmin_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Mot de passe"/>

    <EditText
        android:id="@+id/et_createadmin_pwdconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirmation du mot de passe"/>

    <Button
        android:id="@+id/bt_createadmin_confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:onClick="onCreateAdminClickManager"/>


</LinearLayout>
